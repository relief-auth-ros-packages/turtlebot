<launch>

  <arg name="base"/>
  <arg name="stacks"/>
  <arg name="3d_sensor"/>
  <arg name="num_cameras"/>

  <include file="$(find relief_turtlebot_bringup)/launch/includes/description.launch.xml">
    <arg name="base"        value="$(arg base)" />
    <arg name="stacks"      value="$(arg stacks)" />
    <arg name="3d_sensor"   value="$(arg 3d_sensor)" />
    <arg name="num_cameras" value="$(arg num_cameras)" />
  </include>

  <!-- important generally, but specifically utilised by the current app manager -->
  <param name="robot/name" value="turtlebot"/>
  <param name="robot/type" value="turtlebot"/>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="5.0" />
  </node>

  <node pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator" >
    <rosparam command="load" file="$(find relief_turtlebot_bringup)/param/$(arg base)/diagnostics.yaml" />
  </node>

</launch>
